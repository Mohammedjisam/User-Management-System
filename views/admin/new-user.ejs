<div class="add_user">
    <h1>Add new user</h1>

    <form method="post">
        <input type="text" name="name" placeholder="Enter the name" required />
        <input type="email" name="email" placeholder="Enter the email" required />
        <input type="text" name="mobile" placeholder="Enter the mobile" required />
        <input type="password" name="password" placeholder="Enter Password" required />
        <input type="submit" value="Add User" />
    </form>

    <% if(typeof message !== "undefined") { %>
    <p style="color: red"><%= message %></p>
    <% } %>

    <a href="/admin/dashboard">Go back</a>
</div>
